// Visit https://aka.ms/tsconfig.json for all config options
{
  "include": [
    "hardhat.config.cts",
    "settings.cts",
    "tasks/**/*.ts",
    // test/**/*.ts is explicitly not included to avoid a chicken-egg problem with typechain
    "utils/**/*.ts",
    "utils/**/*.json",
    "../packages/packages/contracts/typechain"
, "tasks/compile.cts", "utils/diamond.cts", "tasks/settingIndex.cts", "utils/tscompile.cts", "tasks/bounty.cts", "tasks/coin.cts", "tasks/deploy.cts", "tasks/equipment.cts", "tasks/player.cts", "tasks/ring.cts", "tasks/town.cts", "tasks/utils.cts"  ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "isolatedModules": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "lib": [
      "ESNext"
    ],
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}